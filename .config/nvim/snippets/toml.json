{
    "pyproject_scaffold": {
        "prefix": "pyproject_scaffold",
        "body": [
            "[build-system]",
            "requires = [\"hatchling\"]",
            "build-backend = \"hatchling.build\"",
            "",
            "[project]",
            "name = \"${1:project_name}\"",
            "version = \"${2:0.1.0}\"",
            "description = \"${3:Project description here}\"",
            "authors = [",
            "    { name = \"${4:Author Name}\", email = \"${5:author@example.com}\" }",
            "]",
            "license = \"${6:license}\"",
            "requires-python = \">=${7:3.12}\"",
            "",
            "[dependency-groups]",
            "dev = [",
            "    \"ruff\",",
            "    \"ty\",",
            "    \"debugpy\",",
            "    \"pytest\",",
            "    \"pytest-mock\",",
            "    \"pytest-cov\",",
            "    \"pyright\",",
            "    \"docformatter\"",
            "]",
            "",
            "[tool.docformatter]",
            "line_length = ${8:88}",
            "pre_summary_newline = true",
            "post_summary_newline = true",
            "make_summary_multi_line = false",
            "force_wrap = false",
            "use_double_quotes = true",
            "",
            "[tool.uv.build]",
            "packages = [\"src\"]"
        ]
    },
    "scaffold_mise_py": {
        "prefix": "scaffold_mise_py",
        "body": "[tools]\n python = \"3.${1:version_number}\" # [optional] will be used for the venv\nuv = 'latest'\n [env]\n PROJECT_NAME = \"{{ config_root | basename }}\"\n _.python.venv = { path = \"{{ config_root }}/.venv\", create = true }\nPYTHONPATH = \"{{ config_root }}\"\n"
    },
    "pyproject_dev_dependencies": {
        "prefix": "pyproject_dev_dependencies",
        "body": [
            "[dependency-groups]\ndev = [\"ruff\", \"ty\", \"debugpy\", \"pytest\", \"pyright\", \"docformatter\"]"
        ],
        "description": "Adds the dev dependencies I normaly use to the pyproject.toml"
    },
    "scaffold_mise_node": {
        "prefix": "scaffold_mise_node",
        "body": [
            "[tools]",
            "# Define Node.js and package manager versions here",
            "node = \"${1:20.x}\"",
            "pnpm = \"${2:latest}\""
        ],
        "description": "Defines Node.js and package manager versions for .mise.toml"
    }
}
